<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="438.0" prefWidth="737.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.tools.ftp.ScannerController">
   <bottom>
      <AnchorPane BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
         <children>
            <ButtonBar layoutX="386.0" prefHeight="40.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.rightAnchor="0.0">
               <buttons>
                  <Button fx:id="stopButton" disable="true" mnemonicParsing="false" onAction="#stopScanner" text="Stop" />
                  <Button fx:id="startButton" mnemonicParsing="false" onAction="#startScanner" text="Start" />
               </buttons>
            </ButtonBar>
            <Label fx:id="scannerStatus" layoutX="14.0" layoutY="11.0" text="Scanner not ready" AnchorPane.bottomAnchor="11.0" AnchorPane.leftAnchor="14.0" AnchorPane.topAnchor="11.0" />
         </children>
         <padding>
            <Insets right="14.0" />
         </padding>
      </AnchorPane>
   </bottom>
   <left>
      <AnchorPane prefHeight="398.0" prefWidth="295.0" BorderPane.alignment="CENTER">
         <children>
            <RadioButton fx:id="scanModeSingle" layoutX="14.0" layoutY="14.0" mnemonicParsing="false" onAction="#changeScanMode" selected="true" text="Single IP scanner">
               <toggleGroup>
                  <ToggleGroup fx:id="scannerType" />
               </toggleGroup>
            </RadioButton>
            <TextField fx:id="singleIp" layoutX="62.0" layoutY="46.0" promptText="Target IP" text="0.0.0.0" />
            <Label layoutX="34.0" layoutY="51.0" text="IP :" />
            <RadioButton fx:id="scanModeRange" layoutX="14.0" layoutY="102.0" mnemonicParsing="false" onAction="#changeScanMode" text="Range IP scanner" toggleGroup="$scannerType" />
            <TextField fx:id="lowerIp" disable="true" layoutX="97.0" layoutY="134.0" />
            <Label layoutX="34.0" layoutY="139.0" text="Start IP :" />
            <Label layoutX="36.0" layoutY="175.0" text="Stop IP :" />
            <TextField fx:id="upperIp" disable="true" layoutX="97.0" layoutY="170.0" />
            <CheckBox fx:id="excludeBounds" disable="true" layoutX="34.0" layoutY="218.0" mnemonicParsing="false" text="Excluse bounds" />
         </children>
      </AnchorPane>
   </left>
   <center>
      <TableView fx:id="scannerResult" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </center>
</BorderPane>
